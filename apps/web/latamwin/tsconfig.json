{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"incremental": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		".next/types/**/*.ts",
		"./next-env.d.ts",
		"./tsconfig.eslint.json",
		".eslintrc.cjs"
	],
	"exclude": ["node_modules"]
}
